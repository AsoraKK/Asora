{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "noEmitOnError": true,
    "strict": true,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": [
    "src/index.ts",
    "src/health.ts",
    "src/feed.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/*.test.ts",
    "coverage"
  ]
}
