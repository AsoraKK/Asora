{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@auth/*": ["src/auth/*"],
      "@feed/*": ["src/feed/*"],
      "@moderation/*": ["src/moderation/*"],
      "@privacy/*": ["src/privacy/*"],
      "@rate-limit/*": ["src/rate-limit/*"],
      "@http/*": ["src/http/*"]
    },
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "types": ["@azure/functions"],
    "plugins": [{ "name": "@azure/functions" }]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**",
    "tests",
    "src/test-setup.ts",
    "node_modules"
  ]
}
