{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@auth/*": ["auth/*"],
      "@feed/*": ["feed/*"],
      "@moderation/*": ["moderation/*"],
      "@privacy/*": ["privacy/*"]
    },
    "plugins": [
      {
        "name": "@azure/functions"
      }
    ],
    "types": ["@azure/functions"],
    "typeRoots": ["./node_modules/@types", "./node_modules/@azure", "./probe/node_modules/@azure", "./src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "tests/**/*", "src/test-setup.ts"]
}
