{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["jest", "node"],
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@auth/*": ["src/auth/*"],
      "@feed/*": ["src/feed/*"],
      "@moderation/*": ["src/moderation/*"],
      "@privacy/*": ["src/privacy/*"],
      "@rate-limit/*": ["src/rate-limit/*"],
      "@http/*": ["src/http/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.test.ts", "tests/**/__tests__/**/*.ts"]
}
