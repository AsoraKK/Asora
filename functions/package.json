{
  "name": "asora-backend-functions",
  "version": "1.0.0",
  "description": "Asora platform backend Azure Functions with AI-powered moderation",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "test": "jest --config jest.config.ts --runInBand",
    "test:unit": "jest --config jest.config.ts --coverage",
    "test:feed": "vitest --config feed/vitest.config.ts --coverage",
    "test:with-no-tests": "jest --config jest.config.ts --passWithNoTests",
    "build": "rimraf dist && tsc && tsc-alias && node scripts/write-dist-entry.cjs",
    "compile": "tsc",
    "postcompile": "node scripts/write-dist-entry.cjs",
    "copy-functions": "copyfiles -u 0 -e \"node_modules/**\" -e \"__tests__/**\" -e \"dist/**\" \"host.json\" \"package.json\" dist/",
    "build-v3": "npm run clean && npm run compile && npm run copy-functions",
    "watch": "echo 'No compilation needed for JavaScript functions'",
    "start": "func start --typescript",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "lint:check": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.js\"",
    "format:check": "prettier --check \"**/*.js\"",
    "prepack": "npm run build",
    "pack": "func pack --javascript --output dist.zip",
    "deploy": "az functionapp deployment source config-zip -g \"$AZURE_RESOURCE_GROUP\" -n \"$AZURE_FUNCTIONAPP_NAME\" --src dist.zip"
  },
  "dependencies": {
    "@azure/app-configuration": "^1.6.0",
    "@azure/cosmos": "^4.0.0",
    "@azure/functions": "^4.7.2",
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "applicationinsights": "^2.9.2",
    "axios": "1.12.2",
    "ioredis": "^5.3.0",
    "joi": "^17.12.1",
    "jose": "^5.2.0",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.16.3",
    "redis": "^4.6.0",
    "undici": "^5.29.0",
    "uuid": "^9.0.1",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "@types/redis": "^4.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typescript": "5.5.4",
    "vitest": "^1.6.0"
  },
  "overrides": {
    "typescript": "5.5.4"
  },
  "keywords": [
    "azure-functions",
    "typescript",
    "cosmos-db",
    "jwt",
    "ai-moderation",
    "hive-ai",
    "asora"
  ],
  "sideEffects": [
    "src/shared/routes/*",
    "src/auth/routes/*",
    "src/feed/routes/*",
    "src/moderation/routes/*",
    "src/privacy/routes/*"
  ],
  "author": "Asora Team",
  "license": "MIT"
}
