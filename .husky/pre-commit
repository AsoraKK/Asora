#!/usr/bin/env bash

echo "🔍 Running pre-commit formatting checks (modern Husky, shim removed)..."

# Validate OpenAPI spec and regenerate client first
echo "📄 Validating OpenAPI spec and client..."
if ! npm run openapi:lint; then
  echo "❌ OpenAPI lint failed"; exit 1; fi
if ! npm run openapi:bundle; then
  echo "❌ OpenAPI bundle failed"; exit 1; fi
if ! npm run openapi:gen:dart; then
  echo "❌ Dart client generation failed"; exit 1; fi
# Ensure regenerated client files are staged in this commit
git add -A lib/generated/api_client || true
echo "✅ OpenAPI validation passed"

# Check Dart formatting (Flutter app) - after client regeneration
echo "📱 Checking Dart formatting..."
find . -name "*.dart" -not -path "./lib/generated/*" -not -path "./.git/*" -not -path "./.dart_tool/*" -exec dart format --output=none --set-exit-if-changed {} +
if [ $? -ne 0 ]; then
  echo "❌ Dart formatting check failed. Please run: find . -name \"*.dart\" -not -path \"./lib/generated/*\" -not -path \"./.git/*\" -not -path \"./.dart_tool/*\" -exec dart format --output=none --set-exit-if-changed {} +"
  exit 1
fi
echo "✅ Dart formatting check passed"
